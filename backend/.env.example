# Environment Configuration
ENV=development

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
TOKEN_ENCRYPTION_KEY=your-token-encryption-key-32-chars-for-fernet
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./app.db
# For production: postgresql+asyncpg://user:password@localhost:5432/cloud_sync

# Storage
LOCAL_STORAGE_PATH=./storage

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
USE_SERVICE_ACCOUNT=false
# For service account mode (optional):
# GOOGLE_SERVICE_ACCOUNT_FILE=./service-account.json

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=cloud-sync-files

# Frontend
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Upload limits
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.txt,.jpg,.jpeg,.png,.gif,.mp4,.mp3,.zip

# Sync settings
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY_SECONDS=5
